<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#EDEDED">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview_screen_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.CardView.Elevated"
        app:cardElevation="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="1dp">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/topbar_screen_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Toolbar.">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_screen_result"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Mega Sena Resultados"
                app:titleCentered="true"
                app:titleTextColor="@color/white"
                app:navigationIconTint="@color/white"
                />

        </com.google.android.material.appbar.AppBarLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/title_result_fragment_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="35sp"
        android:text="Resultados"
        android:textStyle="bold"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/title_contest_fragment_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardview_screen_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/contest_number_fragment_result"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Concurso nÂº"
        android:textColor="#151515"
        />

    <EditText
        android:id="@+id/contest_number_fragment_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/title_contest_fragment_result"
        app:layout_constraintBottom_toBottomOf="@id/title_contest_fragment_result"
        app:layout_constraintStart_toEndOf="@id/title_contest_fragment_result"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="40dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:text="2554"
        android:textColor="#151515"
        />

    <TextView
        android:id="@+id/title_contest_data_fragment_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_contest_fragment_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/contest_data_fragment_result"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Data"
        android:textColor="#151515"
        />

    <TextView
        android:id="@+id/contest_data_fragment_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/title_contest_data_fragment_result"
        app:layout_constraintStart_toEndOf="@id/title_contest_data_fragment_result"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:text="11/01/2023"
        android:textColor="#151515"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_number1_fragment_screen_result"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/title_contest_data_fragment_result"
        app:layout_constraintTop_toBottomOf="@+id/title_contest_data_fragment_result"
        app:layout_constraintEnd_toStartOf="@+id/card_view_number2_fragment_screen_result"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#30AF45"
        style="?attr/materialCardViewElevatedStyle"
        app:cardElevation="1dp">

        <TextView
            android:id="@+id/text_view_number1_fragment_screen_result"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="1"/>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_number2_fragment_screen_result"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/card_view_number1_fragment_screen_result"
        app:layout_constraintTop_toBottomOf="@+id/title_contest_data_fragment_result"
        app:layout_constraintEnd_toStartOf="@id/card_view_number3_fragment_screen_result"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#30AF45"
        style="?attr/materialCardViewElevatedStyle"
        app:cardElevation="1dp">

        <TextView
            android:id="@+id/text_view_number2_fragment_screen_result"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="2"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_number3_fragment_screen_result"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/card_view_number2_fragment_screen_result"
        app:layout_constraintTop_toBottomOf="@+id/title_contest_data_fragment_result"
        app:layout_constraintEnd_toEndOf="@id/contest_data_fragment_result"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#30AF45"
        style="?attr/materialCardViewElevatedStyle"
        app:cardElevation="1dp">

        <TextView
            android:id="@+id/text_view_number3_fragment_screen_result"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="3"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_number4_fragment_screen_result"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/title_contest_data_fragment_result"
        app:layout_constraintTop_toBottomOf="@+id/card_view_number1_fragment_screen_result"
        app:layout_constraintEnd_toStartOf="@+id/card_view_number5_fragment_screen_result"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#30AF45"
        style="?attr/materialCardViewElevatedStyle"
        app:cardElevation="1dp">

        <TextView
            android:id="@+id/text_view_number4_fragment_screen_result"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="4"/>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_number5_fragment_screen_result"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/card_view_number4_fragment_screen_result"
        app:layout_constraintTop_toBottomOf="@+id/card_view_number1_fragment_screen_result"
        app:layout_constraintEnd_toStartOf="@id/card_view_number6_fragment_screen_result"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#30AF45"
        style="?attr/materialCardViewElevatedStyle"
        app:cardElevation="1dp">

        <TextView
            android:id="@+id/text_view_number5_fragment_screen_result"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="5"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_number6_fragment_screen_result"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/card_view_number5_fragment_screen_result"
        app:layout_constraintTop_toBottomOf="@+id/card_view_number1_fragment_screen_result"
        app:layout_constraintEnd_toEndOf="@id/contest_data_fragment_result"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#30AF45"
        style="?attr/materialCardViewElevatedStyle"
        app:cardElevation="1dp">

        <TextView
            android:id="@+id/text_view_number6_fragment_screen_result"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="6"/>

    </com.google.android.material.card.MaterialCardView>



