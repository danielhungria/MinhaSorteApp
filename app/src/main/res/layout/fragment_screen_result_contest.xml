<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview_screen_result"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="1dp"
        app:cardElevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/topbar_screen_result"
            style="@style/Widget.Material3.Toolbar."
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_screen_result"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIconTint="@color/white"
                app:title="Resultados"
                app:titleCentered="true"
                app:titleTextColor="@color/white" />

        </com.google.android.material.appbar.AppBarLayout>
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/imageview_megasena_screen_result"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:src="@drawable/megasenalogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview_screen_result" />

    <TextView
        android:id="@+id/title_contest_fragment_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="Concurso nÂº"
        android:textAlignment="center"
        android:textColor="#151515"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/contest_number_fragment_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageview_megasena_screen_result" />

    <TextView
        android:id="@+id/contest_number_fragment_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="40dp"
        android:textAlignment="center"
        android:textColor="#151515"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/title_contest_fragment_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/title_contest_fragment_result"
        app:layout_constraintTop_toTopOf="@id/title_contest_fragment_result"
        tools:text="2554" />

    <TextView
        android:id="@+id/title_contest_data_fragment_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="Data:"
        android:textAlignment="center"
        android:textColor="#151515"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/contest_data_fragment_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_contest_fragment_result" />

    <TextView
        android:id="@+id/title_result_accumulated_fragment_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="Resultado:"
        android:textAlignment="center"
        android:textColor="#151515"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/contest_data_fragment_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_contest_data_fragment_result" />

    <TextView
        android:id="@+id/result_accumulated_fragment_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/title_result_accumulated_fragment_result"
        app:layout_constraintStart_toEndOf="@id/title_result_accumulated_fragment_result"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:text="Acumulado"
        android:textColor="#151515"
        />

    <TextView
        android:id="@+id/contest_data_fragment_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="40dp"
        android:textAlignment="center"
        android:textColor="#151515"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/title_contest_data_fragment_result"
        app:layout_constraintTop_toTopOf="@id/title_contest_data_fragment_result"
        tools:text="11/01/2023" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_number1_fragment_screen_result"
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#30AF45"
        app:cardElevation="1dp"
        app:layout_constraintEnd_toStartOf="@+id/card_view_number2_fragment_screen_result"
        app:layout_constraintStart_toStartOf="@id/title_contest_data_fragment_result"
        app:layout_constraintTop_toBottomOf="@+id/title_result_accumulated_fragment_result">

        <TextView
            android:id="@+id/text_view_number1_fragment_screen_result"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="1" />

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_number2_fragment_screen_result"
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#30AF45"
        app:cardElevation="1dp"
        app:layout_constraintEnd_toStartOf="@id/card_view_number3_fragment_screen_result"
        app:layout_constraintStart_toEndOf="@id/card_view_number1_fragment_screen_result"
        app:layout_constraintTop_toBottomOf="@+id/title_result_accumulated_fragment_result">

        <TextView
            android:id="@+id/text_view_number2_fragment_screen_result"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="2" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_number3_fragment_screen_result"
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#30AF45"
        app:cardElevation="1dp"
        app:layout_constraintEnd_toEndOf="@id/contest_data_fragment_result"
        app:layout_constraintStart_toEndOf="@id/card_view_number2_fragment_screen_result"
        app:layout_constraintTop_toBottomOf="@+id/title_result_accumulated_fragment_result">

        <TextView
            android:id="@+id/text_view_number3_fragment_screen_result"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="3" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_number4_fragment_screen_result"
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#30AF45"
        app:cardElevation="1dp"
        app:layout_constraintEnd_toStartOf="@+id/card_view_number5_fragment_screen_result"
        app:layout_constraintStart_toStartOf="@id/title_contest_data_fragment_result"
        app:layout_constraintTop_toBottomOf="@+id/card_view_number1_fragment_screen_result">

        <TextView
            android:id="@+id/text_view_number4_fragment_screen_result"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="4" />

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_number5_fragment_screen_result"
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#30AF45"
        app:cardElevation="1dp"
        app:layout_constraintEnd_toStartOf="@id/card_view_number6_fragment_screen_result"
        app:layout_constraintStart_toEndOf="@id/card_view_number4_fragment_screen_result"
        app:layout_constraintTop_toBottomOf="@+id/card_view_number1_fragment_screen_result">

        <TextView
            android:id="@+id/text_view_number5_fragment_screen_result"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="5" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_number6_fragment_screen_result"
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#30AF45"
        app:cardElevation="1dp"
        app:layout_constraintEnd_toEndOf="@id/contest_data_fragment_result"
        app:layout_constraintStart_toEndOf="@id/card_view_number5_fragment_screen_result"
        app:layout_constraintTop_toBottomOf="@+id/card_view_number1_fragment_screen_result">

        <TextView
            android:id="@+id/text_view_number6_fragment_screen_result"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="6" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView_result_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1398509773631594/6129017436"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintBottom_toBottomOf="parent">

    </com.google.android.gms.ads.AdView>

</androidx.constraintlayout.widget.ConstraintLayout>